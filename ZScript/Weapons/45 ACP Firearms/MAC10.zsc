			//A_MuzzleClimb(-frandom(0.4,0.6),-frandom(0.5,0.8),-frandom(0.4,0.6),-frandom(0.5,0.8));
			A_MuzzleClimb(-frandom(1.2,1.6),-frandom(1.1,1.3));
