		sb.SetClipRect(cx,cy,cw,ch);
		sb.drawimage(
			"MACS_000",(0,2)+bob,sb.DI_SCREEN_CENTER|sb.DI_ITEM_CENTER,
			scale:(0.7,0.7)
		);}
