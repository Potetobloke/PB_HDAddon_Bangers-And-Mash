		sb.drawwepdot(-27-(RIx*1),-18-(-RIy*1),(2,2));
		}*/
		
		if(hdw.weaponstatus[M165_CHAMBER]==2){sb.drawwepdot(-26,-17,(3,2));
		}else if(hdw.weaponstatus[M165_CHAMBER]==1){sb.drawwepdot(-26,-22,(3,2));
		}else{sb.drawwepdot(-26,-27,(3,2));
		}
	}
