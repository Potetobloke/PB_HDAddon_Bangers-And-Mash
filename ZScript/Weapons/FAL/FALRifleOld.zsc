	override void DropOneAmmo(int amt){
		if(owner){
			amt=clamp(amt,1,10);
			if(owner.countinv("SevenMilAmmo"))owner.A_DropInventory("SevenMilAmmo",amt*75);
			else {owner.A_DropInventory("HD_FALMag",amt);}//owner.A_DropInventory("HD_FALBoxMag",amt);
		}
	}
