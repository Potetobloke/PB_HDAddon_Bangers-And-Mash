}

enum terminatorstatus{
	TRMF_JUSTUNLOAD=1,

	TRMI_FLAGS=0,
	TRMI_MAG=1,
	TRMI_CHAMBER=2, //0 empty, 1 spent, 2 loaded
	TRMI_ALTPIN=3,
	TRMI_COCKED=4,
};