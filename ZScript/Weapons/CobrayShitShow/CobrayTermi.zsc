	states{
	spawn:
		TNT1 A 0 nodelay{
			let lll=HDTerminatorSG(spawn("HDTerminatorSG",pos,ALLOW_REPLACE));
			if(!lll)return;
			lll.special=special;
			lll.vel=vel;
//			for(int i=0;i<5;i++)lll.args[i]=args[i];
