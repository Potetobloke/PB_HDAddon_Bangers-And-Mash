				spawn("HD50AM_Mag",pos+(10,0,0),ALLOW_REPLACE);
				spawn("HD50AM_Mag",pos+(8,0,0),ALLOW_REPLACE);
				spawn("HD50AM_Mag",pos+(5,0,0),ALLOW_REPLACE);
			}stop;
		}
	}
	
